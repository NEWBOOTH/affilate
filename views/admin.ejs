<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">
  <h1>Admin Panel</h1>
  <p>Logged in as <%= adminUser %> | <a href="/logout">Logout</a></p>

  <table class="table table-striped table-bordered">
    <caption>User Accounts</caption>
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Verified</th>
        <th scope="col">Referral</th>
        <th scope="col">Balance</th>
        <th scope="col">Edit</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.fname %>_<%= user.lname %></td>
          <td><%= user.email %></td>
          <td><%= user.verified ? 'Yes' : 'No' %></td>
          <td><%= user.referral_count || '-' %></td>
          <td>$<%= typeof user.balance === 'number' ? user.balance.toFixed(2) : user.balance %></td>
          <td><a href="/admin/edit/account/<%= user.id %>">Edit</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>

