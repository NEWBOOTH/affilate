'<%- include('head') -%>'
<h1 class="task-header">COMPLETE THE TASK</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Tasks</title>
    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            padding: 2rem;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .task-container {
            max-width: 700px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 10px rgb(0 0 0 / 0.1);
        }
        h1, h2 {
            margin-bottom: 1rem;
        }
        a.channel-link, a.instagram-link {
            font-weight: 600;
            color: #0d6efd;
            text-decoration: none;
        }
        a.channel-link:hover, a.instagram-link:hover {
            text-decoration: underline;
        }
        .btn-primary:disabled {
            opacity: 0.65;
            cursor: not-allowed;
        }
        .instructions ol {
            padding-left: 1.2rem;
        }
        .mt-4 {
            margin-top: 1.5rem !important;
        }
        .mt-3 {
            margin-top: 1rem !important;
        }
    </style>
</head>
<body>
    <div class="task-container">

        <!-- Task 1 -->
        <section id="task1">
            <h1>Task 1: Join Telegram Channel</h1>
            <p class="mb-3">Description: Please join the Telegram channel below.</p>
            <a 
                href="https://t.me/sfdxcgbhjklkhjghfgdjkbj" 
                target="_blank" 
                rel="noopener noreferrer" 
                class="channel-link d-inline-block mb-3"
            >
                Join Telegram Channel
            </a>

            <form action="/verify-task1" method="post" class="mt-4">
                <section 
                    class="telegram-connection-status" 
                    aria-live="polite" 
                    aria-atomic="true"
                >
                    <% if (!info.telegram_username) { %>
                        <div class="alert alert-info" role="alert">
                            <strong>Connect Your Telegram Account!</strong>
                            <p>To complete this task, you need to connect your Telegram account.</p>
                            <div class="instructions">
                                <ol>
                                    <li>Start our Telegram bot: 
                                        <a href="https://t.me/verifyusermembershipBot" target="_blank" rel="noopener noreferrer">@verifyusermembershipBot</a>
                                    </li>
                                    <li>Send the <code>/connect</code> command to the bot.</li>
                                    <li>Once connected, refresh this page to see your Telegram connection status.</li>
                                </ol>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="alert alert-success" role="alert">
                            <strong>Telegram Account Connected!</strong>
                            <p>Your Telegram account (<strong>@<%= info.telegram_username %></strong>) is connected.</p>
                        </div>
                    <% } %>
                </section>

                <button 
                    type="submit" 
                    class="btn btn-primary mt-3"
                    <% if (!info.telegram_username) { %> disabled <% } %>
                >
                    Verify
                </button>
            </form>
        </section>

        <hr class="my-5" />

        <!-- Task 2 -->
        <section id="task2">
            <h2>Task 2: Follow Instagram & Upload Screenshot</h2>
            <p>Please follow this Instagram account and upload a screenshot as proof:</p>

            <a href="https://www.instagram.com/your_instagram_account" target="_blank" rel="noopener noreferrer" class="instagram-link d-inline-block mb-3">
                @your_instagram_account
            </a>

            <form action="/submit-screenshot" method="POST" enctype="multipart/form-data" class="mt-3">
                <div class="mb-3">
                    <label for="upload" class="form-label">Upload Screenshot</label>
                    <input 
                        type="file" 
                        name="upload" 
                        id="upload" 
                        class="form-control" 
                        accept="image/*" 
                        required
                        aria-describedby="uploadHelp"
                    >
                    <div id="uploadHelp" class="form-text">
                        Please upload a screenshot showing you followed the Instagram account.
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </section>

        <hr class="my-5" />

    <!-- Task 3 -->
<section id="task3" class="mt-5">
    <h2>Task 3: Follow TikTok Account & Upload Screenshot</h2>
    <p>Please follow this TikTok account and upload a screenshot as proof:</p>

    <a 
        href="https://www.tiktok.com/@your_tiktok_account" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="d-inline-block mb-3"
        style="font-weight: 600; color: #0d6efd; text-decoration: none;"
        onmouseover="this.style.textDecoration='underline'"
        onmouseout="this.style.textDecoration='none'"
    >
        @your_tiktok_account
    </a>

    <form action="/submit-tiktok-screenshot" method="POST" enctype="multipart/form-data" class="mt-3">
        <div class="mb-3">
            <label for="tiktokUpload" class="form-label">Upload Screenshot</label>
            <input type="file" name="tiktokUpload" id="tiktokUpload" class="form-control" accept="image/*" required aria-describedby="tiktokUploadHelp">
            <div id="tiktokUploadHelp" class="form-text">
                Please upload a screenshot showing you followed the TikTok account.
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</section>

 

    </div>

    <!-- Bootstrap 5 JS Bundle with Popper (optional if you want dropdowns, modals, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

